{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
	"include": ["./**/*.ts"],

  "_version": "20.3.0",

  "compilerOptions": {
    "lib": ["ES2023", "DOM"],
    "types": ["node"],
    "module": "NodeNext",
    "target": "es2022",
    "outDir": "dist/",
    "declaration": true,

    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  }
}